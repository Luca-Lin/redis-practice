<h1>{{user.first_name}} {{user.last_name}} [{{user.id}}]</h1>
<ul class="list-group">
    <li class="list-unstyled"><strong>Email: </strong>{{user.email}}</li>
    <li class="list-unstyled"><strong>Phone: </strong>{{user.phone}}</li>
</ul>
<div class="d-flex justify-content-around">
    <div>
        <a class="btn btn-primary" href="/">Back</a>
    </div>
    <form method="POST" action="/user/delete/{{user.id}}?_method=DELETE">
        <input type="submit" class="btn btn-danger" value="Delete">
    </form>
</div>
